<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.edue.courso">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_grain_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_grain_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ForgottenPassword"
            android:configChanges="screenLayout|orientation|screenSize"></activity>
        <activity android:name=".About"
            android:configChanges="screenLayout|orientation|screenSize"/>
        <activity android:name=".SignIn"
            android:configChanges="screenLayout|orientation|screenSize"/>
        <activity android:name=".UploadMaterial"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".Webview"
            android:configChanges="screenLayout|orientation|screenSize"/>
        <activity android:name=".StudentMaterials"
            android:configChanges="screenLayout|orientation|screenSize"/>
        <activity android:name=".Profile"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".AddMaterials"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".AddNewMaterial"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".MainActivity"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".Home"
            android:configChanges="screenLayout|orientation|screenSize"/>
        <activity android:name=".SignUp"
            android:configChanges="screenLayout|orientation|screenSize" />
        <activity android:name=".SplashScreen"
            android:configChanges="screenLayout|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>