<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <!--<div>Icons made by <a href="https://www.freepik.com/" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" 			    title="Flaticon">www.flaticon.com</a> is licensed by <a href="http://creativecommons.org/licenses/by/3.0/"
          title="Creative Commons BY 3.0" target="_blank">CC 3.0 BY</a></div>-->
        <ImageButton
            android:id="@+id/delete_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/recyclebin"
            android:clickable="true"
            android:background="#C1FF0000"
            android:foregroundGravity="center"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:padding="55dp"
            android:contentDescription="Delete Class"
            android:focusable="true" />

        <TextView
            android:id="@+id/item_code"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="code"
            android:gravity="center"
            android:textSize="80sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:padding="15dp"
            android:background="@color/semiTransparent"
            android:layout_below="@+id/item_code">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>